@model BaseMVC.ViewModels.Project.ProjectInputViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id)

    @Html.ValidationSummary(true)
    <fieldset>
        <legend>ProjectDetails</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SelectedOwnerId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.SelectedOwnerId, new SelectList(Model.AvaiableOwners, "Id", "Value"))
            @Html.ValidationMessageFor(model => model.SelectedOwnerId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.EndDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndDate)
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>
        <div class="editor-label">
            Participants
        </div>
        <div class="editor-field">
            @Html.ListBoxFor(m => m.SelectedParticipants, Model.AvaiableParticipants
                                                             .Select(p => new SelectListItem
                                                             {
                                                                 Selected = p.IsSelected,
                                                                 Text = p.Value,
                                                                 Value = p.Id.ToString()
                                                             }),
                                                         new { style = "height: 200px;" })
            @Html.ValidationMessageFor(model => model.SelectedParticipants)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
